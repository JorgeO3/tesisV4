{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "start": "deno run --allow-write --allow-read main.ts"
  },
  "compilerOptions": {
    "noImplicitReturns": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["no-inferrable-types", "explicit-function-return-type"]
    },
    "report": "compact"
  }
}
